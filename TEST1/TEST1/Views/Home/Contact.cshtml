@{
    <h2>Contact Form Test</h2>

    <form method="post">
        <label>Name</label><br />
        <input name="name" /><br /><br />

        <label>Email</label><br />
        <input name="email" /><br /><br />

        <button type="submit">Submit</button>
    </form>

    @if (ViewBag.Result != null)
    {
        <p><strong>@ViewBag.Result</strong></p>
    }


}
